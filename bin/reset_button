#!/usr/bin/env bash
set -e

# FIXME with jq prob?
DB=mbme
PROG=$(readlink -f "${BASH_SOURCE[0]:-"$(command -v -- "$0")"}")
BASEDIR="$(dirname $PROG)/.."

pushd $BASEDIR

dropdb $DB -f || /bin/true
createdb $DB

find ./a* -name migrations | xargs rm -rf

echo awa && ls apps -1 | grep -v __ | xargs -n 1 ./manage.py makemigrations

# ./manage.py check
# ./manage.py collectstatic
# ./manage.py migrate
# ./manage.py init_awa
./bin/init_awa

popd
